{
  "manifest_version": 3,
  "name": "Behance & Dribbble Downloader",
  "version": "1.0.0",
  "description": "Download all images and videos from Behance and Dribbble portfolios",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://www.behance.net/*",
    "https://dribbble.com/*",
    "https://www.dribbble.com/*",
    "https://*.behance.net/*",
    "https://*.dribbble.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Download Portfolio Media",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.behance.net/*",
        "https://*.behance.net/*",
        "https://dribbble.com/shots/*",
        "https://www.dribbble.com/shots/*",
        "https://dribbble.com/*",
        "https://www.dribbble.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 